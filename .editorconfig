; http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
; trim_trailing_whitespace = true
max_line_length = 80
quote_type = single
arrow_parens = always

[*.js, *.jsx]
arrow_parens = always

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.php]
indent_size = 2
